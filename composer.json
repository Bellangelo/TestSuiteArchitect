{
    "name": "bellangelo/test-suite-architect",
    "description": "A PHPUnit extension for auto-generating test suites",
    "type": "library",
    "bin": [
        "bin/testsuitearchitect"
    ],
    "scripts": {
        "phpstan": "vendor/bin/phpstan analyse -c phpstan.neon",
        "phpstan-pr-analysis": "vendor/bin/phpstan analyse vendor/bin/phpstan analyse -c phpstan.neon --error-format=checkstyle | vendor/bin/cs2pr",
        "docker:shell": "docker run --rm --interactive --tty --volume $PWD:/app composer /bin/sh"
    },
    "require": {
        "php": ">=7.4",
        "minicli/minicli": "^2.2"
	},
    "autoload": {
        "psr-4": {
            "Bellangelo\\TestSuiteArchitect\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Aggelos Bellos",
            "email": "aggelosbellos7@gmail.com"
        }
    ],
    "require-dev": {
        "phpstan/phpstan": "^1.10",
        "staabm/annotate-pull-request-from-checkstyle": "^1.8"
    }
}
